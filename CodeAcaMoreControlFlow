
var number = 20; 

var isEven = function(number) {
  if (number % 2 === 0) {
      return true;
  } else {
      return false;
  }
};

isEven(number);




// Adding isNaN() function.


var isEven = function(number) {
  if (number % 2 === 0) {
      return true;
  } else if (isNaN(number)) {
      return "not a number";
  } else {
      return false;
  }
};

isEven("candy");


